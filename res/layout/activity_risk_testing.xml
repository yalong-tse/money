<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiskTestingActivity" >

    <!-- 风险测试界面 -->


    <!-- top title -->

	<include android:id="@+id/title_bar" layout="@layout/title" />
    
    <ScrollView
        android:id="@+id/risktesting_srollview"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/title_bar"
        android:fadingEdge="none" >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:paddingLeft="10.0dip"
            android:paddingRight="10.0dip"
            android:paddingTop="10.0dip" >

            <TableLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:shrinkColumns="0"
                android:stretchColumns="0" >

                <!-- 您的职业 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_job"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_job"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 您对投资的了解程度 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_knowledge"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_know"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 您的家庭负担 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_family"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_family"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 您目前的职业情况 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_house"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_house"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 您的投资经验 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_experience"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_experience"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 您的年龄 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_age"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 一年可承受的亏损率 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_tolerance"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_tolerance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 投资的首要考虑因素 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_firstfactor"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_firstfactor"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 您过去的投资绩效 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_archivement"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_archivement"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 如果您损失了您的心理状态 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_lost_mentalstate"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_lost_mentalstate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 您目前的主要投资 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_main_invest"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_main_invest"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>

                <!-- 未来避免的投资工具 -->

                <TableRow
                    android:layout_width="fill_parent"
                    android:layout_height="10dp"
                    android:background="@drawable/more_item_press"
                    android:orientation="horizontal" >

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="10dp"
                        android:gravity="left"
                        android:text="@string/title_risktesting_refuse_investtools"
                        android:textColor="#222222"
                        android:textSize="20sp" />

                    <Spinner
                        android:id="@+id/risktesting_refuse_investtools"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="10dp"
                        android:gravity="right" />
                </TableRow>
            </TableLayout>

            <!-- 开始测试按钮 -->
            <Button
                android:id="@+id/begin_test"
                android:layout_width="225dp"
                android:layout_height="55dp"
                android:background="@drawable/btn_blue_pressed"
                android:layout_gravity="center_horizontal"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="25sp"
                android:layout_marginLeft="10dp"
                android:text="@string/title_risktesting_begin_button" />
        </LinearLayout>
    </ScrollView>

    

</RelativeLayout>