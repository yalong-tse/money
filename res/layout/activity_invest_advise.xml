<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/android_layout_bg"
    tools:context=".InvestAdviseActivity" >

    <ListView android:id="@+id/list_product_investadvise"
        android:layout_width="fill_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/invest_footer"
        android:cacheColorHint="#00000000"
        android:scrollbars="none"
        />
    
    <RelativeLayout android:id="@+id/invest_footer"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:background="@drawable/layout_bg"
        android:orientation="horizontal">
        
        <ImageView 
            android:id="@+id/invest_profile_licaishi"
            android:src="@drawable/person_profile"
            android:layout_marginRight="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|center_vertical"
            />
        
        <LinearLayout 
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/invest_profile_licaishi"
            android:layout_centerVertical="true"
            android:layout_marginRight="3dp"
            android:orientation="vertical">
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="王经理，私人金融顾问"
                android:textSize="16sp"
                android:textColor="@android:color/black"
                android:textStyle="bold"/>
            
            <TextView 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="智通财富认证投资理财师"
                android:textSize="13sp"
                android:textColor="@color/person_info_1"
                />
        </LinearLayout>
        
        <Button 
            android:id="@+id/investadvise_contact"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="联系Ta"
            />
    </RelativeLayout>
    
</RelativeLayout>
