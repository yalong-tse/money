<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ProductDetailActivity" >

    <!-- 产品详情界面 -->
    <!-- top title -->

    <RelativeLayout
        android:id="@+id/product_detail_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/gradient_box"
        android:gravity="fill_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_left_product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/title_product_detail"
            android:src="@drawable/return_home" />

        <TextView
            android:id="@+id/product_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="20pt"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/title_product_detail"
            android:textColor="#FFFFFF"
            android:textSize="20sp" >
        </TextView>

        <ImageView
            android:id="@+id/product_detail_img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bank_account_red" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/product_detail_relativelayout"
        android:orientation="vertical" >

        <!-- 产品名称 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/product_detail_productimage_imageview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:contentDescription="@string/list_product_imageview_content"
                android:src="@drawable/bank_account_red" />

            <TextView
                android:id="@+id/product_detail_name_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="9"
                android:text="@string/product_detail_productname"
                android:textColor="#DD2222"
                android:textSize="20sp" />
        </LinearLayout>

        <!-- 产品收益情况行 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- 预期年利率 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/product_detail_profit_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail_profit_value"
                    android:textColor="@color/orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail_profit_key" />
            </LinearLayout>

            <!-- 起购金额 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/product_detail_start_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail_start_value"
                    android:textColor="@color/orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail_start_key" />
            </LinearLayout>

            <!-- 投资期限 -->

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/product_detail_investduration_value"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail_invest_duration_value"
                    android:textColor="@color/orange" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/product_detail_invest_duration_key" />
            </LinearLayout>
        </LinearLayout>

        <!-- 发售日期行 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/product_detail_saledate_key" />

            <TextView
                android:id="@+id/product_detail_saledate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/product_detail_saledate_value"
                android:textColor="@color/orange" />
        </LinearLayout>

        <!-- 计息日期行 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            android:orientation="horizontal" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/product_detail_profitdate_key" />

            <TextView
                android:id="@+id/product_detail_profitdate_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:text="@string/product_detail_profitdate_value"
                android:textColor="@color/orange" />
        </LinearLayout>

        <!-- 加入收藏 -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal" >

            <!-- 加入收藏 -->

            <TextView
                android:id="@+id/product_detail_add_collection_btn"
                android:layout_width="105dip"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:background="@drawable/btn_blue_released"
                android:text="@string/product_detail_btn_add_collection"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- 电话咨询 -->

            <TextView
                android:id="@+id/product_detail_dail_btn"
                android:layout_width="105dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_blue_released"
                android:text="@string/product_detail_btn_dail"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <!-- 附近网点 -->

            <TextView
                android:id="@+id/product_detail_nearby_btn"
                android:layout_width="105dip"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginLeft="20dp"
                android:background="@drawable/btn_blue_released"
                android:text="@string/product_detail_btn_nearby"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>