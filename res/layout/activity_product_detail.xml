<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ProductDetailActivity" >

    <!-- 产品详情界面  -->
 	<!-- top title -->

    <RelativeLayout
        android:id="@+id/product_detail_relativelayout"
        android:layout_width="match_parent"
        android:layout_height="40dip"
        android:background="@drawable/gradient_box"
        android:gravity="fill_horizontal"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_left_product_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:layout_marginLeft="10dp"
            android:contentDescription="@string/title_product_detail"
            android:src="@drawable/return_home" />

        <TextView
            android:id="@+id/product_detail_title"
            android:layout_width="wrap_content"
            android:layout_height="20pt"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:text="@string/title_product_detail"
            android:textColor="#FFFFFF"
            android:textSize="20sp" >
        </TextView>

        <ImageView
            android:id="@+id/product_detail_img_right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:layout_marginRight="8dp"
            android:contentDescription="@string/app_name"
            android:src="@drawable/bank_account_red" />
    </RelativeLayout>
    
    
    
    
    

</RelativeLayout>
